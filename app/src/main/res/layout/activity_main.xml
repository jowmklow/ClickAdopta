<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="local.gonzalez.clickadopta.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imagenLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/clickadopta_logo"
            android:maxHeight="200dp"
            android:scaleType="fitCenter"
            android:contentDescription="hola" />

        <TextView
            android:layout_marginTop="20dp"
            android:text="Nom d'usuari"
            android:textSize="20dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/entra_nom_inici"
            android:textSize="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="20dp"
            android:text="Contrasenya"
            android:textSize="20dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/entra_contrasenya_inici"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp">

        <Button
            android:id="@+id/registra"
            android:text="@string/registrar"
            android:layout_width="134dp"
            android:layout_height="60dp"


            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorAccent"
            android:fadingEdge="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp" />

        <Button
            android:id="@+id/inicia_sessio"
            android:text="@string/entrar"
            android:layout_width="134dp"
            android:layout_height="60dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorAccent"
            android:layout_marginStart="50dp"
            android:layout_alignBaseline="@+id/registra" />

    </LinearLayout>
</RelativeLayout>

